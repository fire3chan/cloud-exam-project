<!DOCTYPE html>
<html lang="en">

<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
	<title>Detail of photo</title>
	<link rel="stylesheet" href="/bootstrap_css/bootstrap.css" />
	<link rel="stylesheet" href="/stylesheets/common.css" />

</head>
<% const isEmpty = (aVar) => {
	if (aVar !== null && aVar !== "" && aVar !== undefined) {
		return false;
	}
	return true;
} %>

<body>
	<div class="header-bar">
		<div class="container">
			<nav class="row">
				<div class="col-12 logo-ctn">
					<a href="/" class="logo-link">
						<img class="logo" src="/images/photo_magnifier.png" />
						<span class="logo-text">MagPhoto</span>
					</a>
				</div>
			</nav>
		</div>
	</div>

	<div class="container">
		<div class="row">
			<div class="col-12">
				<h1 class="mt-3 mb-3">
					<% if (!isEmpty(photoDetail.title)) { %>
					<%= photoDetail.title %>
					<% } else { %>
					<div>Untitled</div>
					<% } %>
				</h1>
			</div>
			<div class="col-12">
				<h2 class="mt-2 mb-4">
					<% if (!isEmpty(photoDetail.description)) { %>
					<%= photoDetail.description %>
					<% } else { %>
					<div>No description</div>
					<% } %>
				</h2>
			</div>
			<div class="col-12">
				<div class="row mb-4">
					<div class="col-12 col-md-7">
						<img class="w-100"
							src="data:<%= photoDetail.photo_mimetype %>;base64, <%= photoDetail.photo %>" />
					</div>
					<div class="col-12 col-md-5">
						<div class="card">
							<% if (noExif) { %>
							<div class="p-1">No exif data</div>
							<% } else { %>
							<ul class="list-group list-group-flush">
								<li class="list-group-item">
									Make:
									<% if (!isEmpty(photoDetail.make)) { %>
									<%= photoDetail.make %>
									<% } else { %>
									<div>No info</div>
									<% } %>
								</li>
								<li class="list-group-item">
									Model:
									<% if (!isEmpty(photoDetail.model)) { %>
									<%= photoDetail.model %>
									<% } else { %>
									<div>No info</div>
									<% } %>
								</li>
								<li class="list-group-item">
									Created on:
									<% if (!isEmpty(photoDetail.createDate)) { %>
									<%= photoDetail.createDate %>
									<% } else { %>
									<div>No info</div>
									<% } %>
								</li>
								<li class="list-group-item">
									Location:
									<% if (photoDetail.GPSLatitude !== undefined && photoDetail.GPSLongitude !== undefined) {%>
									<a href="/map?lat=<%= photoDetail.GPSLatitude %>&lon=<%= photoDetail.GPSLongitude %>"
										class="btn btn-primary">Map</a>
									<% } else { %>
									<div>No location info</div>
									<% } %>
								</li>
							</ul>
							<% } %>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>

</body>

</html>